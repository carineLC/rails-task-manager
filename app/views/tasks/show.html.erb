<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed %>
  <input class="form-check-input" type="checkbox" value="" id="taskDone" checked>
  This task is completed.
<% else %>
  <input class="form-check-input" type="checkbox" value="" id="taskNotDone">
  This task is not completed yet!
<% end %>

<hr>

<%= link_to "Edit your task", edit_task_path %>

<%= link_to "Back to list", tasks_path %>
